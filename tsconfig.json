{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
